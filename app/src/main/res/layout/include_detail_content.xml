<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_icon_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carrotalino"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/detail_name_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrot"
                style="@style/TextAppearance.AppCompat.Headline"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="3">

            <TextView
                android:layout_width="0dp"
                app:layout_columnWeight="2"
                app:layout_gravity="fill_horizontal"
                android:text="Full"
                android:layout_margin="8dp"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <TextView
                android:id="@+id/detail_time_full_textView"
                android:layout_width="0dp"
                app:layout_columnWeight="2"
                android:gravity="center"
                app:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="10 min"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <ImageView
                android:id="@+id/bnt_timerStart_full"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:src="@drawable/ic_timer_black_24dp"
                android:gravity="center"
                app:layout_gravity="center_vertical"
                android:clickable="true"/>
            <TextView
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="Pieces"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>
            <TextView
                android:id="@+id/detail_time_pieces_textView"
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                android:gravity="center"
                app:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="8 min"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <ImageView
                android:id="@+id/bnt_timerStart_pieces"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:src="@drawable/ic_timer_black_24dp"
                android:gravity="center"
                app:layout_gravity="center_vertical"
                android:clickable="true"/>

            <TextView
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="Frozen"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>
            <TextView
                android:id="@+id/detail_time_frozen_textView"
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                android:gravity="center"
                app:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="12 min"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <ImageView
                android:id="@+id/bnt_timerStart_frozen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:src="@drawable/ic_timer_black_24dp"
                android:gravity="center"
                app:layout_gravity="center_vertical"
                android:clickable="true"/>

        </android.support.v7.widget.GridLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooking Tips"
                android:layout_margin="8dp"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <View style="@style/Divider"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/detail_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

        </LinearLayout>


        </android.support.v7.widget.CardView>

</LinearLayout>